<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="280dp">


    <ImageView
        android:id="@+id/sug_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/omara" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#F0EFF5"
        android:layout_marginTop="5dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="70dp"
               android:gravity="right"
               android:text="للبيع ارض في النزهة مكة المكرمة قريبة من شارع ال 60 "
               android:id="@+id/sug_dis"
               android:textSize="18sp"
               android:layout_gravity="right"
               android:textColor="#008000"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="bottom"
               android:layout_gravity="bottom">

               <TextView
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:textColor="#000"
                   android:textSize="18sp"
                   android:gravity="right"
                   android:text="مكة المكرمة"
                   android:layout_weight="1"
                   android:id="@+id/sug_location"

                   />

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/location"
                   android:layout_gravity="center"
                   android:layout_margin="3dp"
                   android:layout_weight="1"
                   />


           </LinearLayout>
       </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
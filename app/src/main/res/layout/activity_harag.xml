<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.compubase.mhmd.alosboiya.Harag"
    android:background="@drawable/hhhh7">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4F97C9"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="حراج الأسبوعية"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp" />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/add"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:id="@+id/addee"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/items_tyeps"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:background="@drawable/accountedittext"
            android:text=" كل المدن"
            android:id="@+id/all_city"
            android:padding="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:background="@drawable/accountedittext"
            android:text=" السعودية "
            android:padding="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sales_list">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#F0EFF5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sales_image"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"

            >
            <TextView
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:textColor="#008000"
                android:textStyle="bold"
                android:text="عمارة جديدة"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_gravity="right"
                android:id="@+id/sales_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:textColor="#008ae6"
                android:textSize="15sp"
                android:id="@+id/sales_date"
                android:layout_gravity="right"
                android:text="22/1/2015"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/location_name"
                    android:textColor="#0f0f0a"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:gravity="right"
                    android:text="جدة"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location"
                    />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:textColor="#0f0f0a"
                    android:textSize="15sp"
                    android:text="ناصر سالم الحارثي"
                    android:gravity="right"
                    android:id="@+id/saller_name"
                    android:layout_gravity="bottom"
                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
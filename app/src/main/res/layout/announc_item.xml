<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
       android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#F0EFF5"
        android:elevation="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/announce_image"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/omara" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="95dp"
             android:orientation="vertical"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:padding="5dp"
                 android:textColor="#47d147"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:text="عمارة جديدة"
                 android:id="@+id/announce_name"
                 android:layout_gravity="right"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:padding="5dp"
                 android:gravity="right"
                 android:layout_margin="5dp"
                 android:textColor="#0080ff"
                 android:textSize="15sp"
                 android:id="@+id/announce_time"
                 android:text="22/8/1995"
                 android:layout_gravity="right"
                 />
         </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:layout_weight="1">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:id="@+id/announce_location"
                    android:textColor="#0f0f0a"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:text="جدة"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Hesham"
                    android:gravity="right"
                    android:id="@+id/annuncer_name"/>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="حذف"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/orangbutton"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="تحديث"
            android:background="@drawable/greenbutton"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="تعديل"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/greenbutton"/>

    </LinearLayout>


</LinearLayout>
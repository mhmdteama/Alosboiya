<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.compubase.mhmd.alosboiya.Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circular_image"
                android:src="@drawable/user" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#0066ff"
                android:text="hesham"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#0066ff"
                android:text="الرصيد الحالي "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/real"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:textColor="#0066ff"
                    android:text="600000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:text="تعديل الملف الشخصي"
        android:background="#0373BC"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:textSize="20sp"
                android:text="mhndteama"
                android:gravity="right"
                android:padding="5dp"
                android:background="@drawable/accountedittext"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="الاسم"
                android:textColor="#0066ff"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:text="01150552551"
                android:gravity="right"
                android:padding="5dp"
                android:inputType="phone"
                android:background="@drawable/accountedittext"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="الجوال"
                android:textColor="#0066ff"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:hint="اختر صورة جديدة"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="@drawable/accountedittext"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="الصورة"
                android:textColor="#0066ff"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:text="123456789"
                android:gravity="right"
                android:padding="5dp"
                android:inputType="textPassword"
                android:background="@drawable/accountedittext"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="كلمة المرور"
                android:textColor="#0066ff"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Spinner
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:id="@+id/elmadenaaedit"
                android:background="@drawable/accountedittext"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="المدينة"
                android:textColor="#0066ff"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
        <Button
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="حفظ التعديلات"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/bluebutton"
            />
    </LinearLayout>

</LinearLayout>
